  <% content_for :page_header do %>
   <%= @client.name %>
  <% end %>
  <% content_for :page_actions do %>
    <%= link_to admin_clients_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-plus"></span>Back
    <% end %>
  <% end %>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @client.name %></dd>

  <dt>Email:</dt>
  <dd><%= @client.email %></dd>

  <dt>Phone:</dt>
  <dd><%= @client.phone %></dd>

  <dt>Description:</dt>
  <dd><%= @client.description %></dd>

</dl>


<div class="panel">
          <div class="panel-heading">
            <span class="panel-title">Client Invoices</span>
          </div>
          <div class="panel-body">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Subject</th>
                </tr>
              </thead>
              <tbody>
              <% @client.invoices.each do |invoice|%>
                <tr>
                  <td><%= invoice.id %></td>
                  <td><%= invoice.subject %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
